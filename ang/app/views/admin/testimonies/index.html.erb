<section class="single-page-title">
  <div class="container">
    <div class="row">
      <div class="col-md-7">
        <h2>Testimonies</h2>
      </div>
      <div class="col-md-5 align-self-center">
        <nav aria-label="breadcrumb">
          <ol class="breadcrumb">
            <li class="breadcrumb-item"><%= link_to "Admin", admin_path %></li>
            <li class="breadcrumb-item active" aria-current="page">Testimonies</li>
          </ol>
        </nav>
      </div>
    </div>
  </div>
</section>

<section class="admin-section-content">
  <div class="container">
    <div class="row">
      <div class="col-sm-12 admin-testimonies">
        <%= render :partial => "shared/flash" %>
        <p><%= link_to "Add new testimony", new_admin_testimony_path, class: "btn btn-primary" %></p>
        <table class="table table-hover">
          <thead>
            <tr>
              <th>#</th>
              <th>Name</th>
              <th>Company</th>
              <th>Content</th>
              <th>&nbsp;</th>
            </tr>
          </thead>
          <tbody>
            <% @testimonies.each_with_index do |testimony, x| %>
              <tr>
                <th scope="row"><%= @no+x+1 %></th>
                <td><%= testimony.name %></td>
                <td><%= testimony.company %></td>
                <td><%= raw(testimony.content) %></td>
                <td>
                  <%= link_to "Edit", edit_admin_testimony_path(testimony.id, :page => params[:page]), 
                              :class => "btn btn-success" %>
                  <%= link_to "Delete", admin_testimony_path(testimony.id, :page => params[:page] ), 
                                        :method => :delete, data: {:confirm => "Are you sure?"}, 
                                        :class => "btn btn-danger" %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>

        <div class="col-xs-12 pagination justify-content-center"><%= paginate @testimonies %></div>
      </div>
    </div>
  </div>
</section>

